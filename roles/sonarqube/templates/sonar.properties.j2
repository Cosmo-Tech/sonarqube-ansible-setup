# SonarQube Configuration
# Generated by Ansible

#--------------------------------------------------------------------------------------------------
# DATABASE SETTINGS
#--------------------------------------------------------------------------------------------------
sonar.jdbc.username={{ sonarqube_db_user }}
sonar.jdbc.password={{ sonarqube_db_password }}
sonar.jdbc.url=jdbc:postgresql://{{ sonarqube_db_host }}:{{ sonarqube_db_port }}/{{ sonarqube_db_name }}?currentSchema={{ sonarqube_db_schema }}

#--------------------------------------------------------------------------------------------------
# WEB SERVER SETTINGS
#--------------------------------------------------------------------------------------------------
sonar.web.host=0.0.0.0
sonar.web.port={{ sonarqube_port }}
sonar.web.context=/

#--------------------------------------------------------------------------------------------------
# PATH SETTINGS
#--------------------------------------------------------------------------------------------------
sonar.path.data={{ sonarqube_data_dir }}
sonar.path.logs={{ sonarqube_logs_dir }}
sonar.path.temp={{ sonarqube_temp_dir }}

#--------------------------------------------------------------------------------------------------
# JAVA SETTINGS
#--------------------------------------------------------------------------------------------------
sonar.ce.javaOpts={{ sonarqube_java_opts }}
sonar.web.javaOpts={{ sonarqube_java_opts }}
sonar.search.javaOpts={{ sonarqube_java_opts }}
