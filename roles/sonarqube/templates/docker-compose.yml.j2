version: "3"

services:
  sonarqube:
    image: sonarqube:{{ sonarqube_version }}
    ports:
      - "{{ sonarqube_port }}:9000"
    environment:
      - SONAR_JDBC_URL=jdbc:postgresql://{{ sonarqube_db_host }}:{{ sonarqube_db_port }}/{{ sonarqube_db_name }}?currentSchema={{ sonarqube_db_schema }}
      - SONAR_JDBC_USERNAME={{ sonarqube_db_user }}
      - SONAR_JDBC_PASSWORD={{ sonarqube_db_password }}
    volumes:
      - {{ sonarqube_data_dir }}:/opt/sonarqube/data
      - {{ sonarqube_extensions_dir }}:/opt/sonarqube/extensions
      - {{ sonarqube_logs_dir }}:/opt/sonarqube/logs
      - {{ sonarqube_temp_dir }}:/opt/sonarqube/temp
    ulimits:
      nofile:
        soft: 65536
        hard: 65536
      nproc:
        soft: 4096
        hard: 4096
    restart: always
